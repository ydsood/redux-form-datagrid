{
  "editor.tabSize": 2,
  "eslint.run": "onSave",
  "eslint.options": {
    "configFile": "./.eslintrc.json"
  },
  "eslint.autoFixOnSave": true,
  "flow.useNPMPackagedFlow": true,
  "javascript.validate.enable": false,
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
}
